# GitHub M&A Intelligence Configuration
# Copy this file to .env and fill in your actual values

# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_API_BASE_URL=https://api.github.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/github_ma_intelligence
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-change-this-in-production

# Admin Authentication (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
FLASK_DEBUG=False

# Data Collection Configuration
COLLECTION_INTERVAL_MINUTES=30
MAX_REPOSITORIES_PER_COLLECTION=100
MIN_STARS_THRESHOLD=10000

# ML Configuration
ANOMALY_CONTAMINATION=0.1
ML_MODEL_UPDATE_INTERVAL_HOURS=24

# Rate Limiting
GITHUB_API_RATE_LIMIT=5000
GITHUB_API_RATE_WINDOW_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=github_ma_intelligence.log

# Cache Configuration
REDIS_CACHE_TIMEOUT_SECONDS=300
ANALYSIS_CACHE_TIMEOUT_SECONDS=600

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL_SECONDS=300
MAX_CHART_POINTS=50

# Notification Configuration (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password